			Select *
			From dbo.Pollsters
			Where Id= @Id

--------------------- Code Small --------------*/
as

BEGIN

	Declare @DateModified  datetime2(7) = getutcdate()

	UPDATE [dbo].[Pollsters]
						
	SET [Name]  = @Name
		,[LogoUrl] = @LogoUrl
		,[SiteUrl] = @SiteUrl
		,[Location] = @Location		
		,[DateModified] = @DateModified

	FROM [dbo].[Pollsters]
	WHERE Id = @Id

END

